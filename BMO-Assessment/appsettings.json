{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Ocelot": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\product.json",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": "1000000",
          "retainedFileCountLimit": "100",
          "rollOnFileSizeLimit": "true",
          "shared": "true",
          "flushToDiskInterval": "00:00:01"
        }
      }
    ]
  },

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Sqlite.db"
    //   "OracleConnection": "User Id=scott;Password=123@123;Data Source=localhost:1521/XEPDB1;"

  },

  "SqlQueries": {
    "GetAllProducts": "SELECT * FROM Products",
    "GetById": "SELECT * FROM Products WHERE Id = :Id",
    "AddProduct": "INSERT INTO Products (Name, Category, Price, Description, CreatedDate) VALUES (:Name, :Category, :Price, :Description, :CreatedDate)",
    "UpdateProduct": "UPDATE Products SET,ProductName = @ProductName,Price=@Price,Category=@Category,Description=@Description WHERE Id = @Id",
    "DeleteProduct": "DELETE FROM Products WHERE Id = :Id"
  },
  "AllowedHosts": "*"
}
